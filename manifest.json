{
  "manifest_version": 3,
  "name": "Swim2Garmin",
  "version": "1.0",
  "description": "Imports training data to Garmin Connect.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "webRequest"
  ],
  "host_permissions": [
    "https://connect.garmin.com/"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://connect.garmin.com/*"],
      "js": ["dist/content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "src/assets/rounded-logo.png"
  }
}
